{
  "compilerOptions": {
    "lib": [
      "dom",
      "esnext"
    ],
    "types": [
      "node",
      "webpack-env"
    ],
    "target": "es5",
    "module": "commonjs",
    "importHelpers": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    // Strict
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    // May break autocomplete
    "strictNullChecks": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}